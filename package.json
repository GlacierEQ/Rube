{
  "name": "@composio/rube-mcp",
  "version": "1.0.0",
  "mcpName": "dev.composio.rube/rube",
  "description": "Rube is a Model Context Protocol (MCP) server that connects your AI tools to 500+ apps like Gmail, Slack, GitHub, and Notion. Simply install it in your AI client, authenticate once with your apps, and start asking your AI to perform real actions like 'Send an email' or 'Create a task.'",
  "main": "index.js",
  "bin": {
    "rube": "bin/rube.js"
  },
  "scripts": {
    "postinstall": "node ./scripts/postinstall.js",
    "test": "node test/rube.test.js",
    "gui": "electron desktop/main.js",
    "dashboard": "node dashboard/server.js",
    "dist": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.antigravity.rube",
    "productName": "Rube Command Center",
    "copyright": "Copyright Â© 2026 Macarena1 / ANTIGRAVITY",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ],
      "icon": "dashboard/public/rube_icon.png",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "dashboard/public/rube_icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "**/*",
      "!node_modules/*"
    ],
    "publish": null
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "automation",
    "composio",
    "claude",
    "cursor",
    "vscode",
    "gmail",
    "slack",
    "notion",
    "github"
  ],
  "author": "Composio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ComposioHQ/rube.git"
  },
  "homepage": "https://rube.app",
  "bugs": {
    "url": "https://github.com/ComposioHQ/rube/issues",
    "email": "support@composio.dev"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "ajv": "^8.17.1",
    "chalk": "^4.1.2",
    "cline": "^1.0.8",
    "commander": "^9.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "glob": "^13.0.0",
    "inquirer": "^8.2.6",
    "natural": "^8.1.0",
    "node-fetch": "^2.7.0",
    "pdf-lib": "^1.17.1",
    "uuid": "^13.0.0",
    "ws": "^8.19.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-is-dev": "^3.0.1"
  }
}
